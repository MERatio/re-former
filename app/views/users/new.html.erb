<% if false %>
  <form action="/users" method="post" accept-charset="UTF-8">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for="user_username">Username</label>
    <input type="text" id="user_username" name="user[username]">
    <label for="user_email">Email</label>
    <input type="email" id="user_email" name="user[email]">
    <label for="user_password">Password</label>
    <input type="password" id="user_password" name="user[password]">
    <input type="submit" name="commit" value="Submit">
  </form>
<% end %>

<% if false %>
  <%= form_tag('/users', method: 'post') do %>
    <%= label_tag('username', 'Username') %>
    <%= text_field_tag('username') %>
    <%= label_tag('email', 'Email') %>
    <%= email_field_tag('email') %>
    <%= label_tag('password', 'Password') %>
    <%= password_field_tag('password') %>
    <%= submit_tag('Submit') %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saved:</h2>
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label(:username, 'Your user name here: ') %>
  <%= f.text_field(:username, value: 'cute_cat2020') %>
  <%= f.label(:email, 'Your email here: ') %>
  <%= f.email_field(:email, placeholder: 'example.example.com') %>
  <%= f.label(:password, 'Your password here: ') %>
  <%= f.password_field(:password) %>
  <%= f.submit('Submit') %>
<% end %>